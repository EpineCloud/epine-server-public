{
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "exclude": ["node_modules/**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019", "DOM"],
    "allowJs": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": true,
    "resolveJsonModule": true
  }
}
